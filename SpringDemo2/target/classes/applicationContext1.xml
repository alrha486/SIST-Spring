<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="student2" class="com.example.Student">
		<constructor-arg value="김메시" />
		<constructor-arg value="31" />
		<constructor-arg>
		<list>
			<value>축구</value><value>농구</value><value>낚시</value>
		</list>
		</constructor-arg>
		<property name="height" value="169.7"></property>
		<property name="weight" value="62.4"></property>
	</bean>

	<bean id="product" class="com.example.Product"
	    c:pName="Keyboard" c:pPrice="15000" p:color="silver" p:maker="ssangyong" />
	

</beans>
